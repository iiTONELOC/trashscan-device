{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": ["es6"],
    "outDir": "./lib",
    "types": ["node"],
    "moduleResolution": "Node",
    "incremental": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "eslintrc.js", "old_python"]
}
